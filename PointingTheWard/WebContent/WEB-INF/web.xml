<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>PointingTheWard</display-name>
  <welcome-file-list>
    <welcome-file>signIn.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>
  		org.springframework.web.servlet.DispatcherServlet
  	</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
  			/WEB-INF/dispatcher-servlet.xml
  		</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/signUp</url-pattern>
    <url-pattern>/signIn</url-pattern>
    <url-pattern>/certification</url-pattern>
  	<url-pattern>/memberSearch</url-pattern>
  	<url-pattern>/addFriend</url-pattern>
  	<url-pattern>/searchFriend</url-pattern>
  	<url-pattern>/searchGroup</url-pattern>
  	<url-pattern>/eventListPage</url-pattern>
  	  
    <!-- request page url -->
    <url-pattern>/signUpPage</url-pattern>
    <url-pattern>/signInPage</url-pattern>
  	<url-pattern>/mainPage</url-pattern>
  	<url-pattern>/memberInfoPage</url-pattern>
  	<url-pattern>/friendListPage</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>
  		org.springframework.web.filter.CharacterEncodingFilter
  	</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <servlet-name>dispatcher</servlet-name>
  </filter-mapping>
</web-app>